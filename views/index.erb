<h1>Shop Inventory System</h1>

<form class="" action="/guitars/new" method="get">
  <input class="button" type="submit" value="Add New">
</form>

<% @guitars.each do |guitar| %>
  <p><a href="/guitars/<%= guitar.id %>"><%= guitar.manufacturer.name %> <%= guitar.name %></a> Description: <%= guitar.description %></p>

  <p>Description: <%= guitar.description %></p>
  <% if guitar.stock_quantity == 0 %><p>In stock: <%= guitar.stock_quantity %> - OUT OF STOCK!!</p>
  <% elsif guitar.stock_quantity < 3 %><p>In stock: <%= guitar.stock_quantity %> - LOW STOCK!!</p>
  <% else %><p>In stock: <%= guitar.stock_quantity %></p>
  <% end %>
  <p>Wholesale cost: £<%= sprintf("%.2f", guitar.buying_cost) %></p>
  <p>Price: £<%= sprintf("%.2f", guitar.selling_price) %></p>
  <p>Markup: £<%= sprintf("%.2f", guitar.selling_price - guitar.buying_cost) %></p>

  <form class="" action="/guitars/<%= guitar.id %>/edit" method="get">
    <input class="button" type="submit" value="Edit">
  </form>
<% end %>
